{{#partial "content"}}


    <div class="card">
        <h1>Create a Player!</h1>
        <form action="/players" method="post">

            <div class="card-body">

            <div class="form-section">
                
                        <div class="form-group">
                        <label for="name">Name</label>
                        <input id="name" class="form-control" name="name" type="text"><br>
                        </div>

                        <div class="form-group">
                        <label for="age">Age</label>
                        <input id="age" name="age" class="form-control" type="text"><br>
                        </div>

                        <div class="form-group">
                        <label for="special_power">Special Ability</label>
                        <input id="special_power" class="form-control" name="special_power" type="text"><br>
                        </div>

                        <div class="form-group">
                        <label for="weaknesses">Weakness</label>
                        <input id="weaknesses" class="form-control" name="weaknesses" type="text"><br>
                        </div>
            </div>

                <div class="form-section">
                        <div class="form-group">
                        <label for="overall_rating">Overall Rating</label>
                        <input id="overall_rating" class="form-control" name="overall_rating" type="text"><br>
                        </div>

                <div class="form-group">
                    <label for="position">Position</label>
                    <input id="position" class="form-control" name="position" type="text"><br>
                </div>
                    <div class="form-group">
                        <label for="squad_id">Squad</label>
                        <input id="squad_id" class="form-control" name="squad_id" type="text"><br>
                    </div>
                    <div class="form-group">
                        <label for="chemistry">Chemistry</label>
                        <input id="chemistry" class="form-control" name="chemistry" type="text"><br>
                    </div>
                </div>
            <div class="form-section">

                        <div class="form-group">
                            <label for="attack">Attack</label>
                            <input id="attack" class="form-control" name="attack" type="text"><br>
                        </div>

                        <div class="form-group">
                            <label for="defence">Defence</label>
                            <input id="defence" class="form-control" name="defence" type="text"><br>
                        </div>

                        <div class="form-group">
                            <label for="passing">Passing</label>
                            <input id="passing" class="form-control" name="passing" type="text"><br>
                        </div>
                <div class="form-group">
                <label for="physical">Physical</label>
                <input id="physical" class="form-control" name="physical" type="text"><br>
            </div>


            </div>


            </div>
        <button type="submit" class="btn btn-primary">Create Player</button>
    </form>
    </div>
{{/partial}}

