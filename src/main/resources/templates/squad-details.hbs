{{#partial "content"}}

    <h1>{{squad.name}}</h1>

    <p>Objective: {{squad.objective}}</p>

    <h3>MEMBERS:</h3>

        {{#if heroesInSquad}}
            {{#each heroesInSquad }}
                <div class="card">
                    <a><b>{{ name }}</b></a>
                    <div class="card-body">
                        <div><img src="/images/heroes/default.png"></div>
                        <div>Overall: {{ overallRating }} <a href="/squads/{{squad.id}}/drop/{{id}}"><button class="btn btn-danger">Drop From squad</button></a></div>
                    </div>

                </div>
            {{/each}}
        {{else}}
            <p>No Members Yet!</p>
        {{/if}}





{{/partial}}

{{#partial "footer-content"}}
    <h4>Recruit Members:</h4>
    <table>
        <thead>
        <th>Name</th>
        <th>Overall</th>
        </thead>
        {{#if heroes}}
            {{#each heroes }}
            <tr>
                <td><a><b>{{ name }}</b></a></td><td>{{ overallRating }}</td> <td><a href="/squads/{{squad.id}}/add/{{id}}"><button class="btn btn-primary">Add to {{squad.name}}</button></a></td>
            </tr>
            {{/each}}
        {{else}}
            <p>No Members Yet!</p>
        {{/if}}
    </table>
{{/partial }}

{{> layout.hbs}}