{{#partial "content"}}

    <h1>SELECT A SQUAD</h1>
<div class="squads-container">
    {{#if squads}}
        {{#each squads }}
            <div class="card">
                <div class="card-body">
                <div><img class="squad-image" src="/images/squads/{{id}}.png"></div>
                    <div class="squad-detail">
                        <b>{{ name }}</b><br>
                        <p><b>Mission: </b>{{ objective }}</p>
                    </div>
                </div>
                <a href="/squads/{{id}}"><button class="btn btn-primary">View Squad</button></a>
            </div>
        {{/each}}
    {{else}}
        <p>No Squads Yet!</p>
    {{/if}}
</div>
{{/partial}}

{{> layout.hbs}}


<style>


.squads-container{
    display: -webkit-flex;
    -webkit-flex-direction: row;
    display: flex;
    flex-direction: row;

}
