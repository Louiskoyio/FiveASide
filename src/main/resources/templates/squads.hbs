    margin:20px;
    padding:10px;
    width:500px;
    font-size:12px;
    text-align:center;
}

.card-body{
    text-align:center;
    font-size:20px;
    display: -webkit-flex;
    -webkit-flex-direction: row;
    display: flex;
    flex-direction: row;
}

