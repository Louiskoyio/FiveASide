{{#partial "content"}}

    <div style="background:#dee0e0; padding:10px;font-family: 'Patua One', cursive;"> <h5>SQUADS</h5></div>
<div class="row squads-container">
    {{#if squads}}
        {{#each squads }}
            <div class="card">
                <div class="card-body">
                <div><img class="squad-image" src="/images/squads/{{id}}.png"></div>
                    <div class="squad-detail">
                        <b>{{ name }}</b><br>
                        <p><b>Mission: </b>{{ objective }}</p>
                    </div>
                </div>
                <a href="/squads/{{id}}"><button class="btn btn-primary">View Squad</button></a>
            </div>
        {{/each}}
    {{else}}
        <p>No Squads Yet!</p>
    {{/if}}
</div>
{{/partial}}

