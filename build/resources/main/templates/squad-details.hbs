{{#partial "content"}}

    <h1>{{squad.name}}</h1>

    <p>Objective: {{squad.objective}}</p>

    <h3>MEMBERS:</h3>
    <ul>
        {{#if heroesInSquad}}
            {{#each heroesInSquad }}
                <li><a><b>{{ name }}</b></a> - Overall: {{ overallRating }} <a href="/squads/{{squad.id}}/drop/{{id}}"><button>Drop From squad</button></a></li>
            {{/each}}
        {{else}}
            <li>No Members Yet!</li>
        {{/if}}
    </ul>





{{/partial}}

{{#partial "footer-content"}}
    <h3>Recruit Members:</h3>
    <ul>
        {{#if heroes}}
            {{#each heroes }}
            <li><a><b>{{ name }}</b></a> - Overall: {{ overallRating }} <a href="/squads/{{squad.id}}/add/{{id}}"><button>Add to {{squad.name}}</button></a></li>
            {{/each}}
        {{else}}
            <li>No Members Yet!</li>
        {{/if}}
    </ul>
{{/partial }}

{{> layout.hbs}}