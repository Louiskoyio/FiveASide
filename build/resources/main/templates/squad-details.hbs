
{{#partial "content"}}

    <div class="team-info">
        <img class="squad-logo" src="/images/squads/{{squad.id}}.png">
        <h1 style="text-transform:uppercase;">{{squad.name}} <small style="text-transform:none;">Objective: {{squad.objective}}</small></h1>
    </div>

    <div class="row heroes-container">



    {{#if playersInSquad}}
            {{#each playersInSquad }}
                <div class="card card-transparent">
                    <a><h5 style="font-family: 'Patua One', cursive;text-transform: uppercase;z-index:10000; position:absolute;color:#878787;">{{ name }}</h5></a>
                    <div class="card-body">
                        <div class="attributes">
                            <div class="player-attributes" style="font-size:15px;">
                                <img class="avatar" src="/images/players/{{id}}.png"><br>
                                <b>Age :</b> {{ age }} <br>
                                <b>Team :</b> teamname <br>
                                <b>Position :</b> {{ position }}<br>
                            </div>

                            <div class="player-attributes">
                                <table class="table table-condensed">
                                    <tr><td>Overall</td><td style="font-size:20px;"><b>{{ overall_rating }}</b></td></tr>
                                    <tr><td>Attack</td><td style="font-size:18px; text-align:center;"><b>{{ attack }}</b></td></tr>
                                    <tr><td>Defence</td><td style="text-align:center;font-size:18px;"><b>{{ defence }}</b></td></tr>
                                    <tr><td>Passing</td><td style="font-size:18px;text-align:center;"><b>{{ passing }}</b></td></tr>
                                    <tr><td>Chemistry</td><td style="font-size:18px;text-align:center;"><b>{{ chemistry }}</b></td></tr>
                                    <tr><td>Special Trait</td><td  style="font-size:15px;text-align:center;"><b>{{ specialPower }}</b></td></tr>
                                    <tr><td>Weakness</td><td  style="font-size:15px;text-align:center;"><b>{{ weakness }}</b></td></tr>
                                </table>

                            </div>

                        </div>
                        <a href="/squads/{{squad.id}}/drop/{{id}}"><button class="btn btn-danger">Drop From squad</button></a>

                    </div>

                </div>
            {{/each}}
        {{else}}
            <p>No Members Yet!</p>
        {{/if}}

<hr>

{{/partial}}

{{#partial "footer-content"}}
    <h4>Recruit Members to This Squad:</h4>
    <div class="row heroes-container">
        {{#if players}}
            {{#each players }}
                <div class="card card-transparent">
                    <a><h5 style="font-family: 'Patua One', cursive;text-transform: uppercase;z-index:10000; position:absolute;">{{ name }}</h5></a>
                    <div class="card-body">
                        <div class="attributes">
                            <div class="player-attributes" style="font-size:15px;">
                                <img class="avatar" src="/images/players/{{id}}.png"><br>
                                <b>Age :</b> {{ age }} <br>
                                <b>Team :</b> teamname <br>
                                <b>Position :</b> {{ position }}<br>
                            </div>

                            <div class="player-attributes">
                                <table class="table table-condensed">
                                    <tr><td>Overall</td><td style="font-size:20px;"><b>{{ overall_rating }}</b></td></tr>
                                    <tr><td>Attack</td><td style="font-size:18px; text-align:center;"><b>{{ attack }}</b></td></tr>
                                    <tr><td>Defence</td><td style="text-align:center;font-size:18px;"><b>{{ defence }}</b></td></tr>
                                    <tr><td>Passing</td><td style="font-size:18px;text-align:center;"><b>{{ passing }}</b></td></tr>
                                    <tr><td>Chemistry</td><td style="font-size:18px;text-align:center;"><b>{{ chemistry }}</b></td></tr>
                                    <tr><td>Special Trait</td><td  style="font-size:15px;text-align:center;"><b>{{ specialPower }}</b></td></tr>
                                    <tr><td>Weakness</td><td  style="font-size:15px;text-align:center;"><b>{{ weakness }}</b></td></tr>
                                </table>

                            </div>

                        </div>
                        <a href="/squads/{{squad.id}}/add/{{id}}"><button class="btn btn-success">add to squad</button></a>

                    </div>

                </div>

            {{/each}}
        {{else}}
            <p>No Players Found!</p>
        {{/if}}
    </div> </div>
{{/partial }}

